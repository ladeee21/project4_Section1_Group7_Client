<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group7fileflix.LandingPage">
    <!-- Background Image (bottom layer) -->
    <ImageView fitHeight="400.0" fitWidth="450.0">
        <image>
            <Image url="@images/Picture1.jpg" />
        </image>
    </ImageView>

    <!-- Content container (centered) -->
    <VBox alignment="CENTER" layoutX="50" layoutY="61.0" prefHeight="289.0" prefWidth="347.0" spacing="20">
        <!-- Logo Image -->
        <ImageView fx:id="logoImage" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/FileFlix.png" />
            </image>
            <effect>
                <DropShadow color="#6E6E6E" radius="10" spread="0.3" />
            </effect>
        </ImageView>

        <!-- Welcome Text with subtle blue color -->
        <Label prefHeight="31.0" prefWidth="210.0" text="Welcome to FileFlix">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="#6BAED6" />
                        <Stop color="#3A7CA5" offset="1.0" />
                    </stops>
                </LinearGradient>
            </textFill>
            <effect>
                <DropShadow color="#00000080" radius="3" spread="0.3" />
            </effect>
        </Label>
    </VBox>
</AnchorPane>
